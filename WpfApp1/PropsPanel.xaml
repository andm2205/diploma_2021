<UserControl x:Class="WpfApp1.PropsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400"
             Width="400">
    <ItemsControl Style="{DynamicResource PropsPanelStyle}">
        <GroupBox BorderThickness="0">
            <ItemsControl>
                <TextBlock Text="Имя сервера:" Grid.Row="0"/>
                <TextBox x:Name="archiveServerNameTb" Grid.Row="0"/>
                <TextBlock Text="Имя базы данных:" Grid.Row="1"/>
                <TextBox x:Name="archiveDbNameTb" Grid.Row="1"/>
                <TextBlock Text="Имя связываемой базы данных:" Grid.Row="2"/>
                <TextBox x:Name="linkedDbNameTb" Grid.Row="2"/>
                <TextBlock Text="Имя таблицы событий:" Grid.Row="3"/>
                <TextBox x:Name="table1NameTb" Grid.Row="3"/>
                <TextBlock Text="Имя таблицы типов операций:" Grid.Row="4"/>
                <TextBox x:Name="table2NameTb" Grid.Row="4"/>
            </ItemsControl>
        </GroupBox>
    </ItemsControl>
</UserControl>
