<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d" 
        MinWidth="800" MinHeight="450" 
        Width="800" Height="450" 
        Loaded="Window_Loaded">
    <DockPanel>
        <Menu
            DockPanel.Dock="Top">
            <MenuItem x:Name="searchItem" Header="Поиск" Click="SearchItem_Click"/>
            <MenuItem x:Name="archiveItem" Header="Архивация" Click="ArchiveItem_Click"/>
            <MenuItem x:Name="connectionSettingsItem" Header="Настройка" Click="ConnectionSettingsItem_Click"/>
        </Menu>
        <Frame x:Name="frame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
